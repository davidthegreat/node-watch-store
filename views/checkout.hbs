<link rel="stylesheet" href="/stylesheets/checkout.css" media="screen" title="no title" charset="utf-8">

<div class="row checkoutpadding">
    <div class="col-sm-6 col-md-12 ">
      <div id="Checkout" class="inline">
          <h1>Pay Invoice</h1>
          <div class="card-row">
              <span class="visa"></span>
              <span class="mastercard"></span>
              <span class="amex"></span>
              <span class="discover"></span>
          </div>
        <div id="charge-error" class="alert alert-danger {{#if noError}} hidden {{/if}} ">
            {{errMsg}}
        </div>
        <form action="/checkout" method="post" id="checkout-form">
            <div class="row">
              <div class="form-group">
                  <label for="name">Name</label>
                  <input  class="form-control" type="text" maxlength="255" id="name" required name="name"></input>
              </div>
              <div class="form-group">
                  <label for="name">E-mail</label>
                  <input  class="form-control" type="text" maxlength="255" id="email" required name="email"></input>
              </div>
              <div class="form-group">
                  <label for="address" >Address:</label>
                  <input  class="form-control" type="text" maxlength="255" id="address" required name="address"></input>
              </div>
                <div class="form-group">
                    <label for="card-name">Name on card</label>
                    <input  class="form-control" type="text" maxlength="255" id="card-name" required></input>
                </div>
                <div class="form-group">
                    <label for="card-number">Card number</label>
                    <input  class="null card-image form-control" type="text" id="card-number" required placeholder="4242-4242-4242-4242"></input>
                </div>
                <div class="col-xs-12">
                    <div class="row">
                      <div class="form-group">
                        <label for="card-expiry-year">Expiry Year</label>
                        <input  class="form-control" type="text" placeholder="YYYY" maxlength="4" id="card-expiry-year"></input>
                      </div>
                      <div class="expiry-date-group form-group">
                          <label for="card-expiry-month">Expiry Month</label>
                          <input  class="form-control" type="text" placeholder="MM" maxlength="2" id="card-expiry-month"></input>
                      </div>
                      <div class="security-code-group form-group">
                          <label for="card-cvc">Security code</label>
                          <div class="input-container" >
                              <input  class="form-control" type="password"  id="card-cvc"></input>
                              <i id="cvc" class="fa fa-question-circle"></i>
                          </div>
                          <div class="cvc-preview-container two-card hide">
                              <div class="amex-cvc-preview"></div>
                              <div class="visa-mc-dis-cvc-preview"></div>
                          </div>
                      </div>
                  </div>
                </div>
            </div>
            <button  class="btn btn-block btn-success submit-button" type="submit">
                <span class="submit-button-lock"></span>
                <span class="align-middle">Pay ${{total}}</span>
            </button>
          </form>
      </div>
    </div>
</div>

<script src="javascripts/jquery-1.11.0.min.js"></script>
<script src="javascripts/jquery.flexslider.js"></script>
<script src="javascripts/responsiveslides.min.js"></script>
<script src="javascripts/simpleCart.min.js"></script>
<script type="text/javascript" src="javascripts/jquery.easydropdown.js"></script>
<script src="javascripts/memenu.js"></script>
<script type="text/javascript" src="https://js.stripe.com/v2/"></script>
<script type="text/javascript" src="javascripts/checkout.js"></script>
